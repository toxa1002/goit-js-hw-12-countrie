{{#each this}}
<div class="country">
    <div class='description'>
        <h2 class='contry-name'>{{name}}</h2>
        <ul class='description-list'>
            <li class='description-item'>Capital : {{capital}}</li>
            <li class='description-item'>Population : {{population}}</li>
            <li class='description-item'>
                languages :
                <ul class='languages-list'>
                    {{#each languages}}
                    <li class="languages-item">{{name}}</li>
                    {{/each}}
                </ul>
            </li>
        </ul>
    </div>
    <div class='additional-info'>
        <img src='{{flags.svg}}' alt='{{name}}' class='country-flag'>
    </div>
</div>
{{/each}}